extends layouts/main.pug

block content
    .form-all
        .form-img
            img(src=`/${goods.fileUrl}`)
        .form-container
            form(action=routes.editGoods(goods.id), method="post")
                p Title
                input(type="text", placeholder="Title", name="title", value=goods.title)
                p Pays
                textarea(name="pays", placeholder="Pays")=goods.pays
                p Description
                textarea(class="textDes", name="description", placeholder="Description")=goods.description
                input(type="submit", value="Update Goods")
            a.form-container__link.form-container__link--delete(href=routes.deleteGoods(goods.id)) Delete Goods 