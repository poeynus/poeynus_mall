extends layouts/main.pug

block content
    .form-container
        form(action=`/goods${routes.upload}`, method="post")
            label(for="file") Goods file
            input(type="file", id="file", name="file" accept="image/gif,image/jpeg,image/png", required=true)
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(name="description", placeholder="Description", required=true)
            input(type="submit", value="Upload Video")