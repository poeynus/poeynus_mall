header.header
    .header__column
        a(href=routes.home)
            i.fas.fa-shopping-cart.hIcon   Poeynus-mall
    .header__column
        form(action=routes.search, method="get")
            input(type="text", placeholder="상품을 입력하세요!", name="gName")      
    .header__column
        ul
            if !user.isAuthenticated
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Log In
            else 
                li
                    a(href=`/goods${routes.upload}`) Upload
                li
                    a(href=routes.userDetail(user.id)) Profile
                li
                    a(href=routes.logout) Log Out  